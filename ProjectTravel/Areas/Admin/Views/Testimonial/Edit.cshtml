@model ProjectTravel.Models.Testimonial;
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Sửa đánh giá</h2>
		</div>

		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>

			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="TestimonialID" type="hidden" />

				<div class="form-group col-md-6">
					<label asp-for="FullName">Tên khách hàng</label>
					<input type="text" class="form-control mb-3" asp-for="FullName" placeholder="Nhập tên khách hàng" />
					<span asp-validation-for="FullName" class="alert-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Description">Mô tả</label>
					<input type="text" class="form-control mb-3" asp-for="Description" placeholder="Nhập mô tả" />
					<span asp-validation-for="Description" class="alert-danger"></span>
				</div>
				<div class="form-group col-md-12">
					<label class="control-label">Hình ảnh</label>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<button class="btn btn-success" type="button" onclick="openDialog()">Chọn một tấm ảnh</button>
						</div>
						<input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon" />
					</div>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="Contents">Nội dung</label>
					<input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Nhập nội dung" />
					<span asp-validation-for="Contents" class=" alert-danger"></span>
				</div>
			</div>
			<div class="form-group col-md-6 mt-3 mb-3">
				<label>
					@Html.CheckBox("IsActive", false)
					Hiển thị
				</label>
			</div>
			<a class="btn btn-app bg-warning p-2 mr-5" href="javascript:history.back()">
				<i class="bi bi-arrow-left"></i> Quay lại
			</a>
			<button type="submit" class="btn btn-app bg-info p-2">
				<i class="bi bi-save"></i> Lưu
		</form>
	</div>
</main>


@{
	var summerNote = new ProjectTravel.Areas.Admin.Models.SummerNote("#Contents");
	<partial name="_SummerNote" model="summerNote" />
}


