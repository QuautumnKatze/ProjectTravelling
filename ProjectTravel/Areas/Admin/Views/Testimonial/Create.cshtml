@model ProjectTravel.Models.Testimonial
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm đánh giá</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới đánh giá</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="FullName">Họ tên</label>
                    <input type="text" class="form-control mb-3" asp-for="FullName" placeholder="Nhập tên khách hàng">
                    <span asp-validation-for="FullName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Description">Mô tả</label>
                    <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Nhập mô tả">
                    <span asp-validation-for="Description" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label">Hình ảnh</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn một tấm ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Images" id="file_input" aria-describedby="button-addon2" />
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Contents">Nội dung</label>
                    <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Nhập nôi dung">
                    <span asp-validation-for="Contents" class="alert-danger"></span>
                </div>

                <div class="form-group mt-5 mb-5">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Testimonial" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>

@{
    var summerNote = new ProjectTravel.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}

