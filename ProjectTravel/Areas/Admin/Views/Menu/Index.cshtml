@using ProjectTravel.Models;
@model IList<Menu>


<div class="wrapper">
    <main id="main" class="main">
        <div class="pagetitle">
            <h2>Danh sách menu</h2>
        </div>

        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Menu" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i> Thêm menu
            </a>
        </p>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Thông tin Menu</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Tiêu đề</th>
                                            <td>Mức</td>
                                            <td>Menu cha</td>
                                            <td>Thứ tự</td>
                                            <td>Ẩn/Hiện</td>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th>@item.MenuID</th>
                                                <td>@item.MenuName</td>
                                                <td>@item.Levels</td>
                                                <td>@item.ParentID</td>
                                                <td>@item.MenuOrder</td>
                                                <td>@item.IsActive</td>
                                                <td>
                                                    <a asp-area="Admin" asp-controller="Menu" asp-action="Edit"
                                                       asp-route-id="@item.MenuID" class="btn btn-primary btn-sm"
                                                       title="Sửa nội dung bài viết"><i class="bi bi-pen"></i></a>

                                                    <a asp-area="Admin" asp-controller="Menu" asp-action="Delete"
                                                       asp-route-id="@item.MenuID" class="btn btn-danger btn-sm"
                                                       title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
               
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>


    </main>
</div>
