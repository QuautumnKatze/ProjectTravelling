@using ProjectTravel.Ultilities;
@model ProjectTravel.Models.Service
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới đánh giá</h2>
        </div>
        <form method="post" asp-action="Create">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ServiceName">Tên dịch vụ</label>
                    <input type="text" class="form-control mb-3" asp-for="ServiceName" placeholder="Nhập tên dịch vụ">
                    <span asp-validation-for="ServiceName" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Introduce">Giới thiệu dịch vụ</label>
                    <input type="text" class="form-control mb-3" asp-for="Introduce" placeholder="Nhập giới thiệu">
                    <span asp-validation-for="Introduce" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Link">Liên kết</label>
                    <input type="text" class="form-control mb-3" asp-for="Link" placeholder="Nhập liên kết">
                    <span asp-validation-for="Link" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label class="control-label">Icon dịch vụ</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <button class="btn btn-success" type="button" onclick="openDialog()">Chọn một tấm ảnh</button>
                        </div>
                        <input type="text" class="form-control" asp-for="Icon" id="file_input" aria-describedby="button-addon2" />
                    </div>
                </div>
                <div class="form-group col-md-6 mt-3 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", true)
                        Hiển thị
                    </label>
                </div>

            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Service" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>

@{
    var summerNote = new ProjectTravel.Areas.Admin.Models.SummerNote("#");
    <partial name="_SummerNote" model="summerNote" />
}


