@using ProjectTravel.Models;
@model IList<Post>

<div class="wrapper">
    <main id="main" class="main">
        <div class="pagetitle">
            <h2>Danh sách bài viết</h2>
        </div>

        <p>
            <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Post" asp-action="Create">
                <i class="bi bi-file-earmark-text me-1"></i> Thêm bài viết
            </a>
        </p>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Thông tin Menu</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Hình ảnh</th>
                                            <th>Tiêu đề</th>
                                            <td>Tác giả</td>
                                            <td>Ngày đăng</td>
                                            <td>Ẩn/Hiện</td>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th>@item.PostID</th>
                                                <td>
                                                    <img src="@item.Images" width="80px">
                                                </td>
                                                <td>@item.Title</td>
                                                <td>@item.Author</td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.IsActive</td>
                                                <td>
                                                    <a asp-area="Admin" asp-controller="Post" asp-action="Edit"
                                                       asp-route-id="@item.PostID" class="btn btn-primary btn-sm"
                                                       title="Sửa nội dung bài viết"><i class="bi bi-pencil"></i></a>

                                                    <a asp-area="Admin" asp-controller="Post" asp-action="Delete"
                                                       asp-route-id="@item.PostID" class="btn btn-danger btn-sm"
                                                       title="Xóa thông tin bài viết"><i class="bi bi-trash"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>


    </main>
</div>