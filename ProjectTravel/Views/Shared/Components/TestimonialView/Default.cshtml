@using ProjectTravel.Models;
@using ProjectTravel.Ultilities;
@model IList<Testimonial>

<style>
	.title {
		display: block;
		display: -webkit-box;
		-webkit-line-clamp: 2; /* số dòng hiển thị */
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.short {
		display: block;
		display: -webkit-box;
		-webkit-line-clamp: 7; /* số dòng hiển thị */
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}
</style>

<div class="section bg-light">




	<h2 class="heading mb-5 text-center">Nhận Xét Của Khách Hàng</h2>

	<div class="text-center mb-5">
		<div id="prevnext-testimonial">
			<span class="prev me-3" data-controls="prev">
				<span class="icon-chevron-left"></span>

			</span>
			<span class="next" data-controls="next">
				<span class="icon-chevron-right"></span>

			</span>
		</div>
	</div>

	<div class="wide-slider-testimonial-wrap">
		<div class="wide-slider-testimonial">
			@foreach (var item in Model)
			{
				<div class="item">
					<blockquote class="block-testimonial">
						<div class="author">
							<img src="@item.Images" alt="Free template by TemplateUX">
							<h3>@item.FullName</h3>
							<p class="short position mb-5">@item.Description</p>
						</div>
						<p>
							<div class="quote">&ldquo;</div>
							&ldquo;@item.Contents&rdquo;
						</p>
					</blockquote>
				</div>
			}
		</div>
	</div>



</div> <!-- /.untree_co-section -->
