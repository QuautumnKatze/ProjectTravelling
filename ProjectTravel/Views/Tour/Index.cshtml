			@foreach (var item in Model)
			{
				<div class="col-md-4 ftco-animate">
					<div class="project-wrap">
						<a href="#" class="img" style="background-image: url(@item.tour.Images);">
							<span class="price">@item.tour.Promotion</span>
						</a>
						<div class="text p-4">
