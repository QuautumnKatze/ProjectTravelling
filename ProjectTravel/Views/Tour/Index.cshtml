							<h5><a href="#">@item.tour.TourName</a></h5>
							<p class="location"><span class="fa fa-map-marker"> @item.locate.LocationName</span> </p>
							@if(@item.tour.PriceSale == null)
							{
							<div class="row">
								<div class="col-12">
									<h5 class="text-danger">@item.tour.Price.ToString("G29") <sup>đ</sup></h5>
								</div>
							</div>
							}
							else
							{
							<div class="row">
								<div class="col-6">
									<del>
