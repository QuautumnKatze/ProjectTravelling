@using ProjectTravel.Ultilities;
@model ProjectTravel.Areas.Admin.Models.Account;

@* @{
    Layout = "_Layout";
} *@

<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="/files/LogForm.jpg"
                                 alt="Sample photo" class="img-fluid" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Đăng nhập</h3>
                                <form asp-controller="Login" asp-action="Index" methor="post">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Tên tài khoản</label>
                                                <input type="text" asp-for="UserName" id="form3Example1m" class="form-control form-control-lg" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-6 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Mật khẩu</label>
                                                <input type="text" asp-for="Password" id="form3Example1m" class="form-control form-control-lg" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 text-center text-danger">
                                        <h6>
                                            @Functions._Message
                                        </h6>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                            <label class="form-check-label" for="rememberMe">Ghi nhớ tôi</label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" class="btn btn-warning btn-lg ms-2">Submit form</button>
                                    </div>

                                    <div class="col-12">
                                        <p class="small mb-0">Chưa có tài khoản? <a href="/Register/Index"> Tạo tài khoản mới</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>