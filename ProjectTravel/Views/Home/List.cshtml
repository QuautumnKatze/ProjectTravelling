@model IList<ProjectTravel.Models.view_Post_Menu>
@using ProjectTravel.Ultilities;

<div class="hero overlay">

	<div class="img-bg rellax">
		<img src="images/hero_2.jpg" alt="Image" class="img-fluid">
	</div>
	<div class="container">
		<div class="row align-items-center justify-content-start">
			<div class="col-lg-6 mx-auto text-center">

				<h1 class="heading" data-aos="fade-up">Blog</h1>
				<p class="mb-4" data-aos="fade-up">A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country, in which roasted parts of sentences fly into your mouth.</p>

				<div data-aos="fade-up">
					<a href="https://www.youtube.com/watch?v=5n-e6lOhVq0" class="play-button glightbox3 w-100 text-center">
						<div class="d-inline-flex align-items-center ">
							<span class="icon-button me-3">
								<span class="icon-play"></span>
							</span>
							<span class="caption">Watch Video</span>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="ftco-section">
	<div class="container">

		<div class="row d-flex align-items-stretch">
			@foreach (var item in Model)
			{
				string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
				<div class="col-md-4 d-flex ftco-animate">
					<div class="blog-entry justify-content-end">
						<a href="blog-single.html" class="block-20" style="background-image: url('@item.Images');">
						</a>
						<div class="text">
							<div class="d-flex align-items-center mb-4 topp">
								<div class="one">
									<span class="day">@item.CreatedDate.Day.ToString()</span>
								</div>
								<div class="two">
									<span class="mos">@Functions.ConvertToVietnameseMonth(item.CreatedDate.Month)</span>
									<span class="yr">@item.CreatedDate.Year.ToString()</span>
								</div>
							</div>
							<h3 class="heading title"><a href="@url">@item.Title</a></h3>
							<p class="short-desc">@item.Abstract</p>
							<p><a href="@url" class="btn btn-primary">Đọc thêm</a></p>
						</div>
					</div>
				</div>
			}

		</div>
	</div>
</div>

