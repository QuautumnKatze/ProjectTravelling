
@model ProjectTravel.Models.Contact;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero overlay">
	<div class="img-bg rellax">
		<img src="images/hero_2.jpg" alt="Image" class="img-fluid">
	</div>
	<div class="container">
		<div class="row align-items-center justify-content-start">
			<div class="col-lg-6 mx-auto text-center">
				<h1 class="heading" data-aos="fade-up">Contact</h1>
				<p data-aos="fade-up">A small river named Duden flows by their place and supplies it with the necessary regelialia. It is a paradisematic country, in which roasted parts of sentences fly into your mouth.</p>
			</div>
		</div>
	</div>
</div>

<div class="section">
		<div class="container">
			<div class="row">
				<div class="col-12"	data-aos="fade-up" data-aos-delay="0">
					
					<h2 class="heading mb-5">Liên hệ với chúng tôi</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
					<div class="contact-info">

						<div class="address mt-4">
							<i class="icon-room"></i>
							<h4 class="mb-2">Địa chỉ:</h4>
							<p>Số 23, đường Lê Duẩn, Thành phố Vinh, Nghệ An</p>
						</div>

						<div class="open-hours mt-4">
							<i class="icon-clock-o"></i>
							<h4 class="mb-2">Thời gian mở cửa:</h4>
							<p>
								Thứ hai - thứ bảy:<br>
								11:00 AM - 23:00 PM
							</p>
						</div>

						<div class="email mt-4">
							<i class="icon-envelope"></i>
							<h4 class="mb-2">Email:</h4>
							<p>Websitename@gmail.com</p>
						</div>

						<div class="phone mt-4">
							<i class="icon-phone"></i>
							<h4 class="mb-2">Call:</h4>
							<p>+1 234 567 890</p>
						</div>

					</div>
				</div>
				<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
					<form id="contact-form">
						<div class="row">
							<div class="col-4 mb-3">
								<input type="text" class="form-control" placeholder="Your Name" id="c_name">
							</div>
							<div class="col-4 mb-3">
								<input type="email" class="form-control" placeholder="Your Email" id="c_email">
							</div>
							<div class="col-4 mb-3">
								<input type="number" class="form-control" placeholder="Your Phone" id="c_phone">
							</div>
							<div class="col-12 mb-3">
								<textarea cols="30" rows="7" class="form-control" placeholder="Message" id="c_message"></textarea>
							</div>

							<div class="col-12">
							<button id="c_submit" type="button" value="submit" class="btn btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" name="submit">Gửi</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div> <!-- /.untree_co-section -->
@section Scripts{
	<script>
		$(document).ready(function () {
			$("#c_submit").click(function () {
				_name = $("#c_name").val();
				_phone = $("#c_phone").val();
				_email = $("#c_email").val();
				_message = $("#c_message").val();
				$.ajax({
					url: "/Contact/Create",
					type: "POST",
					data: { name: _name, phone: _phone, email: _email, message: _message },
					success: function (result) {
						if (result != null) {
							$("#c_name").val("");
							$("#c_phone").val("");
							$("#c_email").val("");
							$("#c_message").val("");
							// alert("Gui thanh cong");
							toastr.success('Gửi thành công');
						}
						else {
							// alert("Gui khong thanh cong");
							toastr.success('Gửi không thành công');
						}
					}
				})
			});
		})
	</script>
}